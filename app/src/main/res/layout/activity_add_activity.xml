<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.incognysis.cheque.Add_activity">

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="6dp">


        <Spinner
            android:id="@+id/type_spinner"
            style="?android:attr/spinnerDropDownItemStyle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/bank_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/bank_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Choose_bank"
                android:inputType="textCapWords"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:background="@drawable/edt_bg_selector"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/givenOrTaken_Edit_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_bg_selector"
                android:hint="Given To"
                android:inputType="textCapWords"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/givenOrTaken_Edit_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Recieved From"
                android:visibility="gone"
                android:background="@drawable/edt_bg_selector" />
        </android.support.design.widget.TextInputLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="9dp"
        android:paddingLeft="14dp"
        android:paddingRight="3dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_entry_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/entry_date_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Entry Date"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawableTint="@color/lightgrey"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:textSize="18dp"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="9dp"
        android:paddingLeft="14dp"
        android:paddingRight="3dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_issued_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/date_issued_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Issued Date"
                style="@android:style/Widget.DeviceDefault.Light.Spinner"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:drawableTint="@color/lightgrey"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:drawablePadding="4dp"
                android:clickable="true"
                android:editable="false"
                android:focusable="false"
                android:textSize="18dp"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="13dp"
            android:paddingRight="13dp">

            <EditText
                android:id="@+id/amount_Edit_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:background="@drawable/edt_bg_selector"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_cheque_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/cheque_no_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="6"
                android:hint="Cheque Number"
                android:background="@drawable/edt_bg_selector"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="7dp"
        >


        <Spinner
            android:id="@+id/status_spinner"
            style="?android:attr/spinnerDropDownItemStyle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:entries="@array/status" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"

        android:paddingLeft="13dp"
        android:paddingRight="13dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/notes_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Notes"
                android:inputType="textCapWords"
                android:background="@drawable/edt_bg_selector"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="12dp">


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reminder"
            android:paddingTop="10dp"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect"
            android:text="Save"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
